<div class="pt-1">
     <div class="mx-8 container" style="text-align: justify; font-weight:600;padding:2%">

          <!-- Software Cost Calculator -->
          <section class="card">

               <!-- Section: Notifications -->
               <div class="d-flex justify-content-between">
                    <div class="d-inline-block ">
                    </div>
                    <div class="alert alert-dismissible alert-success d-inline-block align-self-center mt-2">
                         <button type="button" class="close" data-dismiss="alert">&times;</button>
                         <strong>Well done!</strong> You successfully read <a href="#" class="alert-link">this important
                              alert message</a>.
                    </div>
               </div>
               <!-- Section: Notifications -->

               <!-- Section: Calc Form -->
               <form action="/history/add" method="POST">
                    <div class="d-flex flex-row flex-wrap p-4">

                         <!-- Section: Fixed Cost -->
                         <div class="flex-grow mt-2">
                              <h2 class="font-weight-bold">Fixed Cost <img src="/img/icons/help-icon.png"
                                        title="Variable costs during the project." data-toggle="tooltipFixedCost"
                                        data-placement="right" class="icons"></h2>
                              <div class="row mt-3 ">
                                   <label for="rent" class="col-sm-5 col-form-label">Rent</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="rent"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" value=""
                                             required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="transport" class="col-sm-5 col-form-label">Transport</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="transport"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" value=""
                                             required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="telephone" class="col-sm-5 col-form-label">Telephone/Internet</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="telephone"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" value=""
                                             required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="feeding" class="col-sm-5 col-form-label">Fedding</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="feeding"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" value=""
                                             required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="others" class="col-sm-5 col-form-label">Others</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="others"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" value=""
                                             required>
                                   </div>
                              </div>
                         </div>
                         <!-- Section: Fixed Cost -->

                         <!-- Section: About Project -->
                         <div class="flex-grow mt-2">
                              <h2 class="font-weight-bold">About Cost <img src="/img/icons/help-icon.png"
                                        title="Project estimate" data-toggle="tooltipAboutProject"
                                        data-placement="right" class="icons"></h2>
                              <div class="row mt-2">
                                   <label for="question1" class="col-sm-8 col-form-label ">
                                        * How many hours a day will you dedicate?
                                   </label>
                                   <div class="col-sm-3">
                                        <input type="number" class="form-control text-center" id="hours" placeholder="0"
                                             min="0" max="24" oninput="validity.valid||(value='');" required>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="question2" class="col-sm-8 col-form-label ">
                                        * How many days will it take to finish it?
                                   </label>
                                   <div class="col-sm-3">
                                        <input type="number" class="form-control text-center" id="days" placeholder="0"
                                             min="0" oninput="validity.valid||(value='');" required>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="projecttype" class="col-sm-3 col-form-label ">
                                        * Project Type
                                   </label>
                                   <div class="col-sm-4">
                                        <select class="form-control form-control-sm mb-3 text-center">
                                             <option selected disabled>Select type</option>
                                             <option value="1">Custom Web</option>
                                             <option value="2">e-commerce</option>
                                             <option value="3">Android app</option>
                                             <option value="4">IOS app</option>
                                        </select>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="projectcost" class="col-sm-3 col-form-label ">
                                        * Project Cost
                                   </label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="projectcost"
                                             placeholder="0.00" min="0" oninput="validity.valid||(value='');" required>
                                   </div>
                              </div>
                         </div>
                         <!-- Section: About Project -->

                         <!-- Section Calc Cost day/hr -->
                         <div class="flex-grow-1 mt-2 justify-content-center">
                              <div class="row mb-4">
                                   <div class="border border-secondary rounded py-2 mx-4  w-100 text-center;">
                                        <div class="text-center">
                                             <h5>Cost per Day
                                                  <img src="/img/icons/help-icon.png"
                                                       title="It refers to the amount an client is willing to pay, per day"
                                                       data-toggle="tooltipCostPerDay" data-placement="right"
                                                       class="icons">
                                             </h5>
                                             <h3 id="CostPerDay" class="font-weight-bold">0.00</h3>
                                        </div>
                                   </div>
                              </div>
                              <div class="row mb-4">
                                   <div class="border border-secondary rounded py-2 mx-4  w-100 text-center;">
                                        <div class="text-center">
                                             <h5>Cost per hour
                                                  <img src="/img/icons/help-icon.png"
                                                       title="It refers to the amount an client is willing to pay, per hour"
                                                       data-toggle="tooltipCostPerHr" data-placement="right"
                                                       class="icons">
                                             </h5>
                                             <h3 id="CostPerHour" class="font-weight-bold">0.00</h3>
                                        </div>
                                   </div>
                              </div>
                         </div>
                         <!-- Section Calc Cost day/hr -->

                    </div>

                    <!-- Section: Loader -->
                    <div class="d-flex justify-content-center top-50 mb-3">
                         <div class="spinner-border" role="status">
                              <span class="visually-hidden"></span>
                         </div>
                    </div>
                    <!-- Section: Loader -->

                    <!-- Section: Calc Operations -->
                    <div class="d-flex justify-content-around" style="margin: 0% 25% 5% 25%">
                         <button type="button" class="btn btn-primary btn-lg mx-2 px-4"
                              onclick="Calculate();">Calculate</button>
                         <button type="reset" class="btn btn-outline-danger btn-lg mx-2 px-5">Clean</button>
                         <button type="button" class="btn btn-success btn-lg mx-2 px-5" data-toggle="modal"
                              data-target="#modal_save">Save</button>
                    </div>
                    <!-- Section: Calc Operations -->

               </form>
               <!-- Section: Calc Form -->

               <!-- Section: Calc Results -->
               <div class="d-flex flex-row flex-wrap justify-content-around">
                    <table style="width: 100%" cellspacing="5" cellpadding="5">
                         <tr>
                              <td style="text-align: center; width: 25%">
                                   <section class="card">
                                        <div class="card-body">
                                             <h6>
                                                  What the project will cost you
                                                  <img src="/img/icons/help-icon.png"
                                                       title="Total Variable costs during the project."
                                                       data-toggle="tooltipCost" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="ProjectWillCostYou">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 20%">
                                   <section class="card">
                                        <div class="card-body">
                                             <h6>
                                                  Taxes IVA + ISR
                                                  <img src="/img/icons/help-icon.png"
                                                       title="They are government charges on the income, activities, products or assets of companies and individuals."
                                                       data-toggle="tooltipTax" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="TaxesIVAandISR">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 25%">
                                   <section class="card">
                                        <div class="card-body">
                                             <h6>
                                                  What you should charge
                                                  <img src="/img/icons/help-icon.png" title="Total after taxes applied"
                                                       data-toggle="tooltipCharge" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="Charge">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 15%">
                                   <section class="card">
                                        <div class="card-body">
                                             <h6>
                                                  Revenue
                                                  <img src="/img/icons/help-icon.png" title="Revenue is the income generated from normal business operations and includes discounts and 
                                                       deductions for returned merchandise"
                                                       data-toggle="tooltipRevenue" data-placement="right"
                                                       class="icons">
                                             </h6>
                                             <h3 id="Revenue">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                         </tr>
                    </table>
               </div>
               <!-- Section: Calc Results -->

               <!-- Section: Show History Button -->
               <div id="historyButton" class="mt-4">
                    <img src="/img/icons/help-icon.png" title="Info" data-toggle="tooltipShowHistory"
                         data-placement="right" class="icons">
                    Show History
                    <label class="switch">
                         <input type="checkbox" data-toggle="collapse" data-target="#collapseHistory">
                         <span class="slider round"></span>
                    </label>
               </div>
               <!-- Section: Show History Button -->

               <!-- Section: History table -->
               <div class="collapse" id="collapseHistory">
                    <div class="card card-body">
                         <table id="historyTable" class="table table-striped table-bordered display responsive nowrap"
                              style="width:100%">
                              <thead class="thead-light">
                                   <tr>
                                        <th>#</th>
                                        <th>Project</th>
                                        <th>Hrs</th>
                                        <th>Cost</th>
                                        <th>Date</th>
                                   </tr>
                              </thead>
                              <tbody>
                                   <tr>
                                        <td>1</td>
                                        <td>Custom Web</td>
                                        <td>80</td>
                                        <td>7,000.00</td>
                                        <td>01/01/2021</td>
                                   </tr>
                                   <tr>
                                        <td>2</td>
                                        <td>Android App</td>
                                        <td>80</td>
                                        <td>7,000.00</td>
                                        <td>01/01/2021</td>
                                   </tr>
                                   <tr>
                                        <td>3</td>
                                        <td>IOS App</td>
                                        <td>80</td>
                                        <td>7,000.00</td>
                                        <td>01/01/2021</td>
                                   </tr>
                              </tbody>
                         </table>
                    </div>
               </div>
               <!-- Section: History table -->

               <!-- Section: Save Modal -->
               <div class="modal d-fixed" style="position:fixed; top:30%" id="modal_save">
                    <div class="modal-dialog" role="document">
                         <div class="modal-content">
                              <div class="modal-header">
                                   <h5 class="modal-title">Alert</h5>
                                   <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                        <span aria-hidden="true">&times;</span>
                                   </button>
                              </div>
                              <div class="modal-body">
                                   <h6 style="font-weight: lighter;">Do you want to save the estimated cost calculation
                                        in the history?</h6>
                              </div>
                              <div class="modal-footer">
                                   <button type="button" class="btn btn-primary btn-sm mx-2 px-4">OK</button>
                              </div>
                         </div>
                    </div>
               </div>
               <!-- Section: Save Modal -->

          </section>
     </div>
</div>
<!-- Software Cost Calculator -->