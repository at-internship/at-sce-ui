<div class="pt-1">
     <div class="mx-8 container" style="text-align: justify; font-weight:600;padding:2%">

          <!-- Software Cost Calculator -->
          <section class="card">

               <!-- Section: Notifications -->
               <div class="d-flex justify-content-between">
                    <div class="d-inline-block ">
                    </div>
                    <div id="sceMessages"></div>
                    <!--div class="alert alert-success d-inline-block align-self-center mt-2">
                         <strong>A new calculation is coming...</strong>
                    </div-->
               </div>
               <!-- Section: Notifications -->

               <!-- Section: Calc Form -->
               <form action="/history/add" method="POST">
                <input type="hidden" id="total" name="total" value="0.00">
                <input type="hidden" id="costDay" name="costDay" value="0.00">
                <input type="hidden" id="costHour" name="costHour" value="0.00">
                <input type="hidden" id="taxIva" name="taxIva" value="0.00">
                <input type="hidden" id="taxIsr_r" name="taxIsr_r" value="0.00">
                <input type="hidden" id="taxIva_r" name="taxIva_r" value="0.00">
                <input type="hidden" id="totalTaxes" name="totalTaxes" value="0.00">
                <input type="hidden" id="totalRevenue" name="totalRevenue" value="0.00">
                    <div class="d-flex flex-row flex-wrap p-4">

                         <!-- Section: Fixed Cost -->
                         <div class="flex-grow mt-2">
                              <h2 class="font-weight-bold">Fixed Cost
                                   <img src="/img/icons/help-icon.png" title="Variable costs during the project."
                                        data-toggle="tooltipFixedCost" data-placement="right" class="icons">
                              </h2>
                              <div class="row mt-3 ">
                                   <label for="rent" class="col-sm-5 col-form-label">Rent</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="rent" name="rent"
                                             placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$" value="" required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="transport" class="col-sm-5 col-form-label">Transport</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="transport"
                                             name="transport" placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$"
                                             value="" required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="telephone" class="col-sm-5 col-form-label">Telephone/Internet</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="telephone"
                                             name="telephone" placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$"
                                             value="" required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="feeding" class="col-sm-5 col-form-label">Feeding</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="feeding"
                                             name="feeding" placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$"
                                             value="" required>
                                   </div>
                              </div>
                              <div class="row mt-3">
                                   <label for="others" class="col-sm-5 col-form-label">Others</label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="others" name="others"
                                             placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$" value="" required>
                                   </div>
                              </div>
                         </div>
                         <!-- Section: Fixed Cost -->

                         <!-- Section: About Project -->
                         <div class="flex-grow mt-2">
                              <h2 class="font-weight-bold">About Cost
                                   <img src="/img/icons/help-icon.png" title="Project estimate"
                                        data-toggle="tooltipAboutProject" data-placement="right" class="icons">
                              </h2>
                              <div class="row mt-2">
                                   <label for="hours" class="col-sm-8 col-form-label ">
                                        * How many hours a day will you dedicate?
                                   </label>
                                   <div class="col-sm-3">
                                        <input type="number" class="form-control text-center" id="hours" name="hours"
                                             placeholder="0" min="0" max="24" oninput="validity.valid||(value='');"
                                             required>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="days" class="col-sm-8 col-form-label ">
                                        * How many days will it take to finish it?
                                   </label>
                                   <div class="col-sm-3">
                                        <input type="number" class="form-control text-center" id="days" name="days"
                                             placeholder="0" min="0" oninput="validity.valid||(value='');" required>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="projectType" class="col-sm-3 col-form-label ">
                                        * Project Type
                                   </label>
                                   <div class="col-sm-4">
                                        <select id="projectType" name="projectType" class="form-control form-control-sm mb-3 text-center">
                                             <option value="">- Select type -</option>
                                             <option value="1">Custom Web</option>
                                             <option value="2">e-commerce</option>
                                             <option value="3">Android app</option>
                                             <option value="4">IOS app</option>
                                        </select>
                                   </div>
                              </div>
                              <div class="row mt-2">
                                   <label for="projectCost" class="col-sm-3 col-form-label ">
                                        * Project Cost
                                   </label>
                                   <div class="col-sm-4">
                                        <input type="number" class="form-control text-center" id="projectCost"
                                             name="projectCost" placeholder="0.00" min="0" pattern="^\d*(\.\d{0,2})?$"
                                             required>
                                   </div>
                              </div>
                         </div>
                         <!-- Section: About Project -->

                         <!-- Section Calc Cost day/hr -->
                         <div class="flex-grow-1 mt-2 justify-content-center">
                              <div class="row mb-4">
                                   <div
                                        class="border border-secondary rounded py-2 mx-4  w-100 text-center calcResultsSection">
                                        <div class="text-center">
                                             <h5>Cost per Day
                                                  <img src="/img/icons/help-icon.png"
                                                       title="It refers to the amount an client is willing to pay, per day"
                                                       data-toggle="tooltipCostPerDay" data-placement="right"
                                                       class="icons">
                                             </h5>
                                             <h3 id="costPerDay" name="costPerDay" class="font-weight-bold">0.00</h3>
                                        </div>
                                   </div>
                              </div>
                              <div class="row mb-4 ">
                                   <div
                                        class="border border-secondary rounded py-2 mx-4  w-100 text-center calcResultsSection">
                                        <div class="text-center">
                                             <h5>Cost per hour
                                                  <img src="/img/icons/help-icon.png"
                                                       title="It refers to the amount an client is willing to pay, per hour"
                                                       data-toggle="tooltipCostPerHr" data-placement="right"
                                                       class="icons">
                                             </h5>
                                             <h3 id="costPerHour" name="costPerHour" class="font-weight-bold">0.00</h3>
                                        </div>
                                   </div>
                              </div>
                         </div>
                         <!-- Section Calc Cost day/hr -->

                    </div>

                    <!-- Section: Loader -->
                    <div class="d-flex justify-content-center top-50 mb-3">
                         <div class="spinner-border" role="status">
                              <span class="visually-hidden"></span>
                         </div>
                    </div>
                    <!-- Section: Loader -->

                    <!-- Section: Calc Operations -->
                    <div class="d-flex justify-content-around" style="margin: 0% 25% 5% 25%">
                         <button type="button" class="btn btn-primary btn-lg mx-2 px-4"
                              onclick="calculateProjectCost();">Calculate</button>
                         <button type="reset" class="btn btn-outline-danger btn-lg mx-2 px-5">Clean</button>
                         <button id="saveButton" type="submit" class="btn btn-success btn-lg mx-2 px-5"
                              data-toggle="modal" data-target="#modal_save" disabled>Save</button>
                    </div>
                    <!-- Section: Calc Operations -->
               </form>
               <!-- Section: Calc Form -->

               <!-- Section: Calc Results -->
               <div class="d-flex flex-row flex-wrap justify-content-around ">
                    <table style="width: 100%" cellspacing="5" cellpadding="5">
                         <tr>
                              <td style="text-align: center; width: 25%">
                                   <section class="card calcResultsSection">
                                        <div class="card-body">
                                             <h6>
                                                  What the project will cost you
                                                  <img src="/img/icons/help-icon.png"
                                                       title="Total Variable costs during the project."
                                                       data-toggle="tooltipCost" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="projectWillCostYou">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 20%">
                                   <section class="card calcResultsSection">
                                        <div class="card-body">
                                             <h6>
                                                  Taxes IVA + IVA retention + ISR Retention
                                                  <img src="/img/icons/help-icon.png"
                                                       title="They are government charges on the income, activities, products or assets of companies and individuals."
                                                       data-toggle="tooltipTax" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="taxesIVAandISR">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 25%">
                                   <section class="card calcResultsSection">
                                        <div class="card-body">
                                             <h6>
                                                  What you should charge
                                                  <img src="/img/icons/help-icon.png" title="Total after taxes applied"
                                                       data-toggle="tooltipCharge" data-placement="right" class="icons">
                                             </h6>
                                             <h3 id="charge">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                              <td style="text-align: center; width: 15%">
                                   <section class="card calcResultsSection">
                                        <div class="card-body">
                                             <h6>
                                                  Revenue
                                                  <img src="/img/icons/help-icon.png" title="Revenue is the income generated from normal business operations and includes discounts and 
                                                       deductions for returned merchandise"
                                                       data-toggle="tooltipRevenue" data-placement="right"
                                                       class="icons">
                                             </h6>
                                             <h3 id="revenue">0.00</h3>
                                        </div>
                                   </section>
                              </td>
                         </tr>
                    </table>
               </div>
               <!-- Section: Calc Results -->

               <!-- Section: Show History Button -->
               <div id="historyButton" class="mt-4">
                    <img src="/img/icons/help-icon.png" title="Info" data-toggle="tooltipShowHistory"
                         data-placement="right" class="icons">
                    Show History
                    <label class="switch">
                         <input type="checkbox" data-toggle="collapse" data-target="#collapseHistory">
                         <span class="slider round"></span>
                    </label>
               </div>
               <!-- Section: Show History Button -->

               <!-- Section: History table -->
               <div class="collapse" id="collapseHistory">
                    <div class="card card-body">
                         <table id="historyTable" class="table table-striped table-bordered display responsive nowrap"
                              style="width:100%">
                              <thead class="thead-light">
                                   <tr>
                                        <th>#</th>
                                        <th>Project</th>
                                        <th>Hrs</th>
                                        <th>Cost</th>
                                        <th>Date</th>
                                   </tr>
                              </thead>
                              <tbody>
                                   {{#each history}}
                                   <tr>
                                        <td>{{id}}</td>
                                        <td>{{ typeProject type }}</td>
                                        <td>{{totalHours}}</td>
                                        <td>{{total}}</td>
                                        <td>{{totalDays}}</td>
                                   </tr>
                                   {{/each}}
                              </tbody>
                         </table>
                    </div>
               </div>
               <!-- Section: History table -->

          </section>
          <!-- Software Cost Calculator -->

          <!-- Section: Save Modal -->
          <div class="modal d-fixed" style="position:fixed; top:30%" id="modal_save">
               <div class="modal-dialog" role="document">
                    <div class="modal-content">
                         <div class="modal-header">
                              <h5 class="modal-title">Alert</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="close">
                                   <span aria-hidden="true">&times;</span>
                              </button>
                         </div>
                         <div class="modal-body">
                              <h6 style="font-weight: lighter;">Do you want to save the estimated cost calculation
                                   in the history?</h6>
                         </div>
                         <div class="modal-footer">
                              <button type="button" class="btn btn-primary btn-sm mx-2 px-4">OK</button>
                         </div>
                    </div>
               </div>
          </div>
          <!-- Section: Save Modal -->
     </div>
</div>